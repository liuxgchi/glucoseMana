<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Progressbar_LoadingMore">
        　　<item name="android:indeterminateDrawable">@drawable/lv_loading_more</item>
        　　<item name="android:minWidth">90dip</item>
        　　<item name="android:maxWidth">76dip</item>
        　　<item name="android:minHeight">76dip</item>
        　　<item name="android:maxHeight">76dip</item>
    </style>

    <style name="type_content_style" >
        <item name="android:textColor">@color/type_content_text</item>
        <item name="android:textSize">@dimen/type_content_text</item>
    </style>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- 自定义loading dialog -->
    <style name="op_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item><!-- 是否半透明 -->
        <!--设置弹出的时候当前页面的背景是否要灰色-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item><!-- 是否半透明 -->
        <!--设置弹出的时候当前页面的背景是否要灰色-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
